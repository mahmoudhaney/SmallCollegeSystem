@model Specialization

<h1>
    Specialization Edit
</h1>

<div class="row" style="display: flex; justify-content: center; margin-top: 100px">
    <form method="post" asp-controller="Specializations" asp-action="EditSpecialization" class="stdForm col-6">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div>
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label>Description</label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="stdFormBtns">
            <button type="submit" class="main-btn col-5" style="border: none;">Save Changes</button>
            <a asp-controller="Specializations" asp-action="Index" class="main-btn col-5">Back To List</a>
        </div>
    </form>
</div>