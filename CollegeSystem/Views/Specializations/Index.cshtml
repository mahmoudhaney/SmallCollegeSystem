@model IEnumerable<Specialization>

<h1>
    Our Specializations
</h1>

<a asp-controller="Specializations" asp-action="Create" class="main-btn" style="margin-bottom: 32px;">Add New Specialization</a>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>More...</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Specializations" asp-action="Details" asp-route-id=@item.Id class="btn btn-success">
                            Details
                        </a>
                        <a asp-controller="Specializations" asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Specializations" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 style="border-radius: 40px; color: red;">
        !! There is no Specialization yet !!
    </h1>
}